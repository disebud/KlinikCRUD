<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".activity.HalamanUtama">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginBottom="30dp"
        android:text="HALAMAN UTAMA" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="100dp"
        app:srcCompat="@drawable/klinik" />

    <Button
        android:id="@+id/btn_pasien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#8BC34A"
        android:onClick="pasienMove"
        android:text="PASIEN" />

    <Button
        android:id="@+id/btn_dokter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:onClick="dokterMove"
        android:text="DOKTER" />

    <Button
        android:id="@+id/btn_rekam_medis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#7ECD00"
        android:onClick="rekammedisMove"
        android:text="REKAM MEDIS" />


</LinearLayout>