<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".activity.rekamMedis.LihatRekamMedis">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            android:text="Lihat Data  Rekam Medis"
            android:textAlignment="center"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor" />
        <TextView
            android:id="@+id/tv_noRekam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0000"
            android:textAlignment="textEnd"
            android:textSize="25sp">
        </TextView>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tanggal Rekam Medis" />
        <TextView
            android:id="@+id/tv_tgl_rekam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="yyyy-mm-dd"
            android:textAlignment="textEnd"
            android:textSize="25sp"
            />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Pasien" />
        <TextView
            android:id="@+id/tv_noPasien_rekam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00000"
            android:textAlignment="textEnd"
            android:textSize="25sp"
            />
        <TextView
            android:id="@+id/tv_namaPasien_rekam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="siapa"
            android:textAlignment="textEnd"
            android:textSize="25sp"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nomor Dokter" />
        <TextView
            android:id="@+id/tv_noDokter_rekam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0000"
            android:textAlignment="textEnd"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/tv_namaDokter_rekam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="siapa"
            android:textAlignment="textEnd"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/tv_spesialisDokter_rekam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="anu"
            android:textAlignment="textEnd"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Keluhan" />
        <TextView
            android:id="@+id/tv_keluhan_rekam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="keluhan sakit"
            android:textAlignment="textEnd"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Diagnosa" />
        <TextView
            android:id="@+id/tv_diagnosa_rekam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:textSize="25sp"
            android:hint="0000000"
            android:inputType="number" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biaya" />
        <TextView
            android:id="@+id/tv_biaya_rekam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:textSize="25sp"
            android:text="0000"
            />
        <Button
            android:id="@+id/button_kembali_rekam_lihat"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_media_previous"
            android:text="Kembali" />

    </LinearLayout>
</ScrollView>

